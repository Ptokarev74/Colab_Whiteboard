{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // *** CRITICAL FIX: Adding paths to explicitly resolve modules ***
    "paths": {
      "@/*": [
        "./*"
      ],
      "firebase/*": [
        "./node_modules/firebase/*"
      ],
      "firebase/app": [
        "./node_modules/firebase/app"
      ],
      "firebase/auth": [
        "./node_modules/firebase/auth"
      ],
      "firebase/firestore": [
        "./node_modules/firebase/firestore"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "global.d.ts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
